.news {
  height: 180rpx;
  margin: 0 20rpx;
  border-bottom: 1px solid #FF7F50;
  display: flex;
  align-items: center;
}
.new_img > image {
  height: 140rpx;
  width: 140rpx;
  border-radius: 10rpx;
}
.news > .text {
  height: 150rpx;
  margin-left: 18rpx;
}
.title {
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 25rpx;
}
.desc {
  height: 48rpx;
  color: #bebbbb;
  font-size: 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}
.next {
  width: 90rpx;
  height: 90rpx;
  position: fixed;
  bottom: 60rpx;
  right: 8rpx;
  background: #FF7F50;
  border-radius: 100%;
  opacity: 0.8;
}
.next > image {
  width: 100%;
  height: 100%;
}
.ctime {
  margin-top: 6px;
  color: #bebbbb;
  font-size: 18rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}